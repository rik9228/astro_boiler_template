{
  "$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "ignore": ["env.d.ts"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "lineEnding": "lf"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "include": ["astro.config.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "noUselessElse": "off"
          }
        }
      }
    }
  ]
}
