{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      ":/*": ["./*"]
    }
  },
  "include": ["/**/*.ts", "/*.ts", "/**/*.astro", "/**/*.tsx", "env.d.ts"]
}
